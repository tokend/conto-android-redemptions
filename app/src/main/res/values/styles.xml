<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentSystemUi" parent="AppTheme.NoActionBar">
        <!-- All the magic is in versioned files -->
    </style>

    <style name="LimitedMatchParentWidthConstraint">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintWidth_max">@dimen/max_content_width</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="HintText" parent="@style/SecondaryText">
        <item name="android:textSize">@dimen/text_size_hint</item>
    </style>

    <style name="HeadingText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="PrimaryActionTextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">@dimen/double_margin</item>
        <item name="android:paddingRight">@dimen/double_margin</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomTabsTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImpressiveCard">
        <item name="contentPadding">@dimen/standard_margin</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginTop">@dimen/half_standard_margin</item>
        <item name="cardElevation">@dimen/impressive_card_elevation</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="StrokedBadgeText">
        <item name="android:background">@drawable/stroke_badge_text_background</item>
        <item name="android:layout_height">@dimen/badge_text_height</item>
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:paddingRight">@dimen/standard_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/icons</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="titleTextColor">@color/primary_text</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleAppearance</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText">
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditText.OneLine" parent="EditText">
        <item name="android:maxLines">1</item>
    </style>
</resources>
